<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/relativelayoutrides"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="3dp"
    android:background="@color/white"

    android:outlineAmbientShadowColor="@color/grey_font"
    android:layout_marginBottom="5dp"
    >



    <TextView
        android:id="@+id/origintxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:textColor="@color/colorPrimary"
        android:text="Origin: "
        android:textStyle="bold"



        android:textSize="12dp" />


    <TextView
        android:id="@+id/origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/origintxt"
        android:layout_marginTop="13dp"
        android:text="Origin"

         android:layout_marginLeft="10dp"
        android:textSize="12dp" />


    <TextView
        android:id="@+id/destinationtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/origin"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"

        android:text="Destination: "/>


    <TextView
        android:id="@+id/destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/destinationtxt"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"

        android:text="Destination"/>


    <TextView
        android:id="@+id/faretxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/destination"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="12dp"

        android:text="FARE: "/>


    <TextView
        android:id="@+id/fare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/destination"
        android:layout_toRightOf="@id/faretxt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"

        android:text="FARE"/>


    <TextView
        android:id="@+id/seatavailabilitytxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fare"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="12dp"

        android:text="Seats Availability: "/>


    <TextView
        android:id="@+id/seatavailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/seatavailabilitytxt"
        android:layout_below="@+id/fare"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"

        android:text="Seats Availability"/>



    <TextView
        android:id="@+id/uid2txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seatavailability"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        android:text="Driver: "/>


    <TextView
        android:id="@+id/uid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seatavailability"
        android:layout_toRightOf="@id/uid2txt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:text="UID"/>







</RelativeLayout>